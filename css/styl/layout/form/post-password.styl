.post-password-form
	p
		margin-bottom $marginDiff

	// vyhledávací pole
	input[type="password"]
		@extend .inp-text
		margin 11px 0 0
	// inp fix vyhledávacího pole
	label
		@extend .h6
		margin 0 0 16px
		position relative
		display block
		padding 0 ( 24px ) 0 0
		input
			width 100%
			margin-right ( -24px )

	input[type="submit"]
		display none