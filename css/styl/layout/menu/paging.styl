.menu-paging
	margin-top $marginTop + $marginBottom + 1
	font-size 0px
	.page-numbers
		position relative
		display inline-block
		vertical-align middle
		font-size $fontSize
		line-height 26px
		min-width 26px
		min-height 26px
		padding 5px
		text-align center
		margin-right 15px
		border 2px solid transparent
		text-decoration none
	.dots
		border none
		height 34px
		min-width 0
		padding 0
	.prev
	.next
		text-hide()
		&:before
			@extend $icon
			position absolute
			font-size 16px
			top 50%
			left 50%
			margin -8px 0 0 -9px
		 @extend .icon-crossroad-arrow-left

	.next
		&:before
			margin-left -7px
		 @extend .icon-crossroad-arrow-right


/*! #editable - common */

.menu-paging
	.page-numbers
		color $colorGrey /*! sn_global_text_secondary_color */
		border-color $colorGrey /*! sn_global_text_secondary_color */
		&:before
			color $colorGrey /*! sn_global_text_secondary_color */

	a.page-numbers:hover
		border-color $color /*! sn_global_text_color */
		color $color /*! sn_global_text_color */
		&:before
			color $color /*! sn_global_text_color */

	.current
		border-color $color /*! sn_global_text_color */
		color $color /*! sn_global_text_color */

/*! /editable */