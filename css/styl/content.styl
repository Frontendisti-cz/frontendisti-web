@import "content/basic-class.styl"

/*!
 * Typo
 */
body
	font $fontSize/$lineHeight $font
	color #000

// Titles
h1
.h1
h2
.h2
h3
.h3
h4
.h4
h5
.h5
h6
.h6
	font-family $fontTitles
	line-height 1.2em
	margin $marginTop 0 $marginBottom

h1
.h1
	font-size 50px
	&:first-letter
		text-transform uppercase
h2
.h2
	font-size 35px
h3
.h3
	font-size 30px

h4
.h4
	font-size 25px

h5
.h5
	font-size 20px
h6
.h6
	font-size 15px
	text-transform uppercase

.h1
.h2
.h3
.h4
.h5
.h6
	display block

// Titles comby
h1
	+ h2
		margin-top 29px
h2
h3
	+ h6,
	+ .h6
		margin-top 13px

h4
.h4
h5
.h5
	+ h6,
	+ .h6
		margin-top -4px

h6
.h6
	+ h1
		margin-top -7px
	+ h2
		margin-top -2px


// Paragraph
p
	margin 0 0 $marginBottom

// Blockquote
blockquote
	margin .8em 0 .3em
	p
		margin 0

// Links

a
	tap-highlight-color rgba(0,0,0,0);
	text-decoration underline
	&:hover
		text-decoration none

// Lists
ul
ol
	margin 0 0 $marginBottom
	list-style none
	padding 0
li
	padding 0 0 0 24px
	margin 0 0 5px 0
	position relative
	ol
	ul
		margin $marginBottom 0 0
ul
	> li
		&:before
			content ''
			position absolute
			top 11px
			//left 4px
			margin-left -20px
			size 7px
ol
	counter-reset item
	> li
		background none
		&:before
			content counter(item)"."
			counter-increment item
			position absolute
			left 0
			top 0
			text-align left

dl
	margin 0
dt
	margin 0
dd
	margin 0 0 $marginBottom
	padding 0

// Tables
table
	width 100%
	clear both
	margin $marginTopFill 0
	empty-cells show
	border-collapse collapse
	border none
td
th
	vertical-align middle
	padding 12px 10px 11px
	border 1px solid transparent
	border-width 1px 0px

@media(max-width:600px)
	table:not(#wp-calendar)
		thead
			display none
		tr
		td
		th
			display block
			border none
			padding 0 0 11px
		tr
			padding 12px 0 0
			border 1px solid transparent
			border-width 1px 0px
			margin-bottom -1px
			.right
				text-align left


/*! #editable - common */

// Titles
h1
.h1
h2
.h2
h3
.h3
h4
.h4
h5
.h5
h6
.h6
	color $colorTitle /*! sn_global_title_color */
	font-weight 700 /*! sn_css_heading_weight */

h1
.h1
	font-weight 700 /*! sn_css_h1_weight */

// Inline
strong
b
.bold
dt
	font-weight 700 /*! sn_css_h1_weight */

ol > li:before
	font-weight 700 /*! sn_css_heading_weight */

// Links
a
	color $colorLink /*! sn_global_link_color */
	&:hover
		color $colorHover /*! sn_global_link_color_hover */

// List
ul > li:before
	background $colorGrey /*! sn_global_text_secondary_color */

// Table
td
th
	border-color $colorGrey /*! sn_global_text_secondary_color */

@media(max-width:600px)
		tr
			border-color $colorGrey /*! sn_global_text_secondary_color */
/*! /editable */


// Extend must by last becouse stylus not extend selectors after extend rule
th
	@extend h6
	margin 0
	padding-top 17px
	padding-bottom 15px
	text-align left