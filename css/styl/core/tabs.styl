.tabs-line
	zoom 1
	overflow hidden
	margin 0 0 $marginDiff
	li
		float left
		list-style none
		padding 0
	a
		@extend h6
		display block
		text-decoration none
		padding 17px 26px 14px
		margin 0
		&.active
			border 1px solid transparent
			border-width 1px 1px 0
			padding 16px 25px 14px
			position relative
			&:hover
				text-decoration none
				cursor default
			&:before,
			&:after
				content ""
				position absolute
				width 1000px
				bottom 0
				right 100%
				height 1px
			&:after
				right auto
				left 100%

.tabs-wrap
	position relative

.tabs-fragment
	.js &
		position absolute
		right 0
		top 0
		left 0
	&.js-hide
		opacity 0
		height 1px

.tabs
	margin-top $marginTopFill
	&
		+ h1
		+ .h1
		+ h2
		+ .h2
		+ h3
		+ .h3
		+ h4
		+ .h4
		+ h5
		+ .h5
		+ h6
		+ .h6
			margin-top $marginDiff


/*! #editable - common */

.tabs-line
	a
		&.active
			border-color $colorGrey /*! sn_global_text_secondary_color */
			&:before,
			&:after
				background-color $colorGrey /*! sn_global_text_secondary_color */
			&:hover
				color $colorLink /*! sn_global_link_color */


/*! /editable */