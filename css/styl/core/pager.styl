.pager
	margin 0
	text-align center
	.prev
	.next
		position absolute
		z-index 101
		top 50%
		text-decoration none
		left -1px
		// pro test
		font-size 50px
		line-height 1
		margin-top -25px
		transition opacity .3s ease
		opacity 0
		color #fff

		&:before
			@extend $icon
			font-size 40px
		@extend .icon-slideshow-arrow-left

	.next
		left auto
		right -1px
		@extend .icon-slideshow-arrow-right

	.pages
		position absolute
		z-index 101
		bottom 20px
		left 25%
		right 25%
		font-size 0px
		a
			display inline-block
			size 12px
			margin 0 5px
			opacity .5
			border-radius 20px
			background #fff
			&.active
				opacity 1
				cursor default

